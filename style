/* Media Query for basic responsiveness - Stacks sidebar on small screens */
@media (max-width: 768px) {
    .container {
        flex-direction: column;
        width: 100%;
        margin: 0;
        border-radius: 0;
    }
    
    .sidebar {
        width: 100%;
        border-right: none;
        border-bottom: 1px solid #ddd;
        padding-bottom: 10px;
    }

    .nav-menu {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }

    .nav-menu li a {
        padding: 8px 15px;
        border-left: none;
        border-bottom: 3px solid transparent;
    }
    
    .nav-menu li a:hover {
        border-left: none;
        border-bottom: 3px solid #007bff;
    }
    
    .content {
        padding: 20px;
    }
}